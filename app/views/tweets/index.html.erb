<h1>Tweets#index</h1>
<p>Find me in app/views/tweets/index.html.erb</p>

<%= render 'form' %>

<hr>

<% for tweet in @tweets do %>
  <div class="">
    <p>
      <%= link_to "@" + tweet.user.handle, user_path(tweet.user.handle) %> wrote <%= time_ago_in_words tweet.created_at %> ago
    </p>
    <h3>
      <%= tweet.content %>
    </h3>
    <br>
  </div>

<% end %>
